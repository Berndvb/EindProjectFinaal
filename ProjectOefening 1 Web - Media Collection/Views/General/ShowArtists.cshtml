@model IEnumerable<ProjectOefening.ServiceLayer.ViewModels.ArtistViewModel>

@{
    ViewData["Title"] = "ShowArtists";
}

<style>
    * {
        background: #f24b4b !important;
        color: white !important;
    }
</style>

<h1>ShowArtists</h1>
<p>
    @Html.ActionLink("Main Menu", "Index", "Home")
</p>
<p>
    @Html.ActionLink("Create", "CreateArtist", "Extra")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Media)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtistType)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <th>
                @if (item.Media != null)
                {
                    @foreach (var media in item.Media)
                    {
                        <p>- @Html.DisplayFor(item => media.Title)</p>
                    }
                }
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.ArtistType)
            </td>
            <td>
                <a asp-action="EditArtist" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DeleteArtist" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
