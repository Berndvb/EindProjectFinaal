@model IEnumerable<ProjectOefening.ServiceLayer.ViewModels.GenreViewModel>

@{
    ViewData["Title"] = "ShowGenres";
}

<style>
    * {
        background: #f24b4b !important;
        color: white !important;
    }
</style>

<h1>ShowGenres</h1>
<p>
    @Html.ActionLink("Main Menu", "Index", "Home")
</p>
<p>
    @Html.ActionLink("Create", "CreateGenre", "Extra")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genretype)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genretype)
            </td>
            <td>
                <a asp-action="EditGenre" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DeleteGenre" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
